<!-- views/signup.handlebars -->
<h2 class="card-header">Sign Up</h2>
<form id="signup-form" class="card-body">
  <div class="form-row">
    <label for="username-signup" class="form-label">Username</label>
    <input id="username-signup" name="username" type="text" class="form-input form-control" required />
  </div>
  <div class="form-row">
    <label class="form-label" for="email-signup">Email</label>
    <input id="email-signup" name="email" type="email" class="form-input form-control" required />
  </div>
  <div class="form-row">
    <label class="form-label" for="password-signup">Password</label>
    <input id="password-signup" name="password" type="password" class="form-input form-control" required />
  </div>
  <button type="submit" class="btn btn-primary">Sign Up</button>
  <a class="btn btn-secondary login-link" href="/login">Log In</a>
</form>

<script src="/js/signup.js"></script>
