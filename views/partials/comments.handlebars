<!-- views/partials/comments.handlebars -->
<div class="comments">
  {{#each this}}
    <div class="card">
      <section class="comment card-body">
        <div class="text">
          {{comment_text}}
        </div>
        <div class="meta">
          - {{user.username}}, {{format_date created_at}}
        </div>
      </section>
    </div>
  {{/each}}
</div>
