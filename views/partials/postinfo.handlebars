<!-- views/partials/post-info.handlebars -->
<div class="post-info card">
  <div class="card-header">
    <h2><a class="link" href="/post/{{id}}">{{title}}</a></h2>
    <p>By {{user.username}} on {{format_date created_at}}</p>
  </div>
  <div class="card-body">
    <p>{{truncate content 200}}</p>
    <a href="/post/{{id}}" class="btn btn-primary">Read More</a>
  </div>
</div>
