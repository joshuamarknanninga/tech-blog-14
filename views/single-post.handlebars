<!-- views/single-post.handlebars -->
<section class="single-post-container">
  {{> post-info post}}

  {{#if loggedIn}}
    <div class="comment-container">
      <h3 class="card-header">Add a Comment</h3>
      <form class="card-body comment-form" id="comment-form">
        <div class="form-row">
          <label class="form-label" for="comment">Comment</label>
          <textarea id="comment" name="comment_text" class="form-input form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <div id="error-message" class="error"></div>
      </form>
    </div>
  {{else}}
    <p><a href="/login">Log in</a> to add a comment.</p>
  {{/if}}

  {{> comments post.comments}}
</section>

{{#if loggedIn}}
  <script src="/js/comment.js"></script>
{{/if}}
